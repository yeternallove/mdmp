<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:background="@color/cardBackground"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/ly_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_task_ic"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_test_renwu" />

        <TextView
            android:id="@+id/item_task_tv_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:text="尺寸管理"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/headings" />

        <ImageView
            android:id="@+id/item_task_more"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="@dimen/icon_padding"
            android:src="@drawable/ic_test_look" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gl_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_head"
        android:columnCount="2"
        android:paddingStart="@dimen/icon_size_small">

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:background="@drawable/ic_test_lingxing" />

        <TextView
            android:id="@+id/item_task_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2018-3-29 接收任务时间" />

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:background="@drawable/ic_test_lingxing" />

        <TextView
            android:id="@+id/item_task_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="待处理环节" />

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:background="@drawable/ic_test_lingxing" />

        <TextView
            android:id="@+id/item_task_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2018-3-29 上一环节结束时间" />


    </GridLayout>

    <LinearLayout
        android:id="@+id/ly4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gl_message"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:background="@drawable/ic_test_lv" />

        <TextView
            android:id="@+id/item_task_tv_mdmname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:text="主数据名称"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/headings" />
    </LinearLayout>
</RelativeLayout>